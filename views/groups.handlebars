<div class="container">
	<h1>List of All Groups</h1>
	<table class='table'>
		<thead>
			<th>Group Name</th>
			<th>Group Members</th>
		</thead>
		{{#each data}}
			<tbody>
				<td>{{this.group_name}}</td>
				<td>{{this.first_name}}, {{this.last_name}}</td>
			</tbody>
		{{/each}}               
	</table>

		<h1>Add A New Group</h1>
    <form action="groups_add" method="post">
      <div class="form-group">
        <input type="text" class="form-control" id="" name="group_name" aria-describedby="" placeholder="Group Name">
      </div>
        <input type="submit" value="Submit" class="ylw-btn"></input>
    </form>
	</div>
</div>