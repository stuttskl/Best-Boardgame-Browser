<div class='container'>
  <h1>List of All Games</h1>
	<table class='table'>
		<thead>
			<th>Game Name</th>
			<th>Game Category</th>
			<th>Minimum Players</th>
			<th>Maximum Players</th>
		</thead>
		{{#each data}}
			<tbody>
				<td>{{this.game_name}}</td>
        <td>{{this.game_category}}</td>
        <td>{{this.min_players}}</td>
        <td>{{this.max_players}}</td>
			</tbody>
		{{/each}}               
	</table>

  <div class="container">
  <h1>Add A New Game to Player Library</h1>
    <form action="games_add" method="post">
      <div class="form-group">
        <input type="text" class="form-control" id="" name="game_name" aria-describedby="" placeholder="Game Name">
      </div>
      <div class="form-group">
        <input type="number" class="form-control" id="" name="min_players" placeholder="Minumum Number of Players">
      </div>
      <div class="form-group">
        <input type="number" class="form-control" id="" name="max_players" placeholder="Maximum Number of Players">
      </div>
        <input type="submit" value="Submit" class="ylw-btn"></input>
      </div>
    </form>
</div>
</div>	
